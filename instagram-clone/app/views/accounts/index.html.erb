<div class="container">
  <div class="row">
    <div class="col-8">
      <% @posts.each do |post| %>
        <div class="insta-post">
          <div class="post-meta">
            <%= link_to image_tag(post.account.image.url, width: "50px", height: "50px", class: "img-circle"), profile_path(post.account.username) %>
            <%= link_to post.account.username, profile_path(post.account.username), class: "text-dark text-decoration-none" %>
          </div>
                
          <%= image_tag post.image.url, class: "img img-fluid" %>
        </div>
      <% end %>
            
      </div>
      <div class="col-4">
        <div class = "account-summary">
          <p><strong><%= current_account.username %></strong></br>
          <%= current_account.full_name %></p>
          </div>
        <div class = "follower-suggestions">

      </div>
    </div>
  </div>
</div>